@using MovieASP.DataAccess.Entities
@model List<MovieEntity>

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <style>
        .card-img-top {
            width: 100%;
            height: 450px;
            object-fit: cover;
        }
        .card {
            height: 100%;
        }
    </style>
</head>
    <body>
        <div class="container">
            <h2 class="mt-5 mb-4 text-center">@ViewData["Title"]</h2>
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                    @foreach (var movie in Model)
                    {
                        <div class="col">
                            <div class="card h-100">
                                <a href="@Url.Action("GetById", new { id = movie.Id })"><img src="@movie.Image" class="card-img-top" alt="Баннер фильма @movie.Title"></a>

                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@movie.Title</h5>
                                    <p class="card-text"><strong>Жанр: </strong> @movie.Genre</p>
                                    <p class="card-text"><strong>Режиссер: </strong> @movie.Director</p>
                                    <a href="@Url.Action("GetById", new { id = movie.Id })" class="btn btn-primary mt-auto">Подробнее</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
        </div>
    </body>
</html>